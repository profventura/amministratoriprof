# .htaccess per OVH
# Assicurati che i permessi del file siano 644 (o 604) e NON 777

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Se siamo su localhost in una sottocartella, RewriteBase deve includerla
    # Su produzione (root) va bene /, ma in locale serve /amministratoriprof/
    # Soluzione: Lasciamo che Apache lo rilevi automaticamente o usiamo un path relativo
    #RewriteBase /
     RewriteBase /amministratoriprof/

    # Serve existing files/directories as-is
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to root index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Disabilita listing directory
Options -Indexes

