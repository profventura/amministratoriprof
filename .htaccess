# .htaccess per OVH
# Assicurati che i permessi del file siano 644 (o 604) e NON 777

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Serve existing files/directories as-is
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to root index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Disabilita listing directory
Options -Indexes

